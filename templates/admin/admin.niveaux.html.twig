{% extends "baseadmin.html.twig" %}
{% block body %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-left align-top" scope="col">
                    niveaux
                </th>
                <th class="text-right align-top" scope="col">
                    <form class="form-inline mt-1" method="POST" action="{{ path("admin.niveau.ajout") }}">
                        <div class="form-group mr-1 mb-2">
                            <input type="text" class="sm" name="ajout">
                        </div>
                        <input type="hidden" name="_token" value="{{ csrf_token('filtre_niveau') }}">
                        <button type="submit" class="btn btn-info mb-2 btn-sm">Ajouter</button>
                    </form>
                </th>
                <th class="text-left align-top" scope="col">
                    &nbsp;
                </th>
            </tr>
        </thead>
        <tbody>
            {% for niveau in niveaux %}
                <tr>
                    <td>
                        <h5 class="text-info">
                            {{ niveau.label }}
                        </h5>
                    </td>
                    <td class="text-right">
                        <a href="{{ path('admin.niveau.suppr', {id:niveau.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ niveau.label }} ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}